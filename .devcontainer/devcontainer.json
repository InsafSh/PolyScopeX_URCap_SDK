{
  "name": "polyscopex-sdk-devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "appPort": [
    "4200:4200",
    "80:80"
  ],
  "forwardPorts": [
    4200,
    80
  ],
  "onCreateCommand": "sudo chmod 666 /var/run/docker.sock",
  "updateContentCommand": {
    "setOwnership": "sudo chown -R dev:dev ${containerWorkspaceFolder} /ursim-polyscopex-0.14.47 /sdk-polyscopex-6.1.29"
  },
  "postCreateCommand": {
    "prepareUrsim": "sudo rm -f run-simulator && ln -s /ursim-polyscopex-0.14.47/run-simulator ${containerWorkspaceFolder}",
    "prepareSdk": "sudo rsync -ac --info=progress2 --exclude=install.sh --exclude=readme.txt /sdk-polyscopex-6.1.29/ ${containerWorkspaceFolder}"
  },
  "postStartCommand": [
    "sudo chmod 666 /var/run/docker.sock",
    "echo 'Starting URSim simulator...'",
    "nohup ${containerWorkspaceFolder}/run-simulator --port 80 > ${containerWorkspaceFolder}/urcap-sim.log 2>&1 &",
    "echo 'URSim started in background. Log: urcap-sim.log'",
    "echo 'Go to PORTS tab and forward port 80 to access URSim.'"
  ],
  "containerEnv": {
    "SHELL": "/bin/bash",
    "DEV_CONTAINER": "true",
    "containerWorkspaceFolder": "${containerWorkspaceFolder}"
  },
  "runArgs": [
    "--add-host=host.docker.internal:host-gateway",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "angular.languageServer.trace": "messages",
        "angular.languageServer.useBundled": true,
        "angular.forceStrictTemplates": true
      },
      "extensions": [
        "Angular.ng-template",
        "ZainChen.json",
        "ahern.urscript",
        "ecmel.vscode-html-css",
        "eriklynd.json-tools",
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-vscode.vscode-typescript-next",
        "redhat.vscode-xml",
        "redhat.vscode-yaml"
      ]
    }
  }
}
